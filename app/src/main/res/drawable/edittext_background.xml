<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="@color/light_gray" /> <!-- Replace with desired background color -->

    <!-- Corner Radius -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->

    <!-- Border/Stroke -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Light gray border -->

    <!-- Padding (Optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
