<!-- res/layout/bottom_navigation.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#009999"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="5"
    android:padding="8dp">

    <!-- Buttons with icons in the footer -->
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_tracker"
        android:contentDescription="Tracker Icon"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_gauge"
        android:contentDescription="Eco Gauge Icon"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_hub"
        android:contentDescription="Eco Hub Icon"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_balance"
        android:contentDescription="Eco Balance Icon"
        android:scaleType="centerInside" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_user"
        android:contentDescription="User Icon"
        android:scaleType="centerInside" />
</LinearLayout>
