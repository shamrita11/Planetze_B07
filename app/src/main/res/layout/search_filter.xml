<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/search_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Search_Filter"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/almost_black"
        android:fontFamily="sans-serif" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/search_bar_container"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_below="@id/search_filter_title"
        android:layout_marginTop="70dp"
        android:background="@drawable/search"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="sans-serif"
            android:hint="search habit or keyword"
            android:padding="8dp"
            android:textColor="@color/dark_teal"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="34dp"
            android:layout_height="26dp"
            android:contentDescription="Search icon"
            android:src="@drawable/search_mag" />
    </LinearLayout>

    <!-- Filters -->
    <LinearLayout
        android:id="@+id/filters_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar_container"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/dropdown_background"
            android:entries="@array/categories"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/impact_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/dropdown_background"
            android:entries="@array/impact_levels"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Magnifying Glass Icon -->
    <ImageView
        android:id="@+id/magnifying_glass_icon"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/Magnifying"
        android:src="@drawable/magn"
        android:alpha="0.1"/>

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/search_back"
        android:background="@null"
        android:focusable="true"
        android:clickable="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/back_btn" />
</RelativeLayout>
