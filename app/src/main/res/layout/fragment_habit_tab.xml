<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".Account">

    <TextView
        android:id="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/eco_habit"
        android:textColor="@color/slate_blue"
        android:textSize="50sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/account_info"
        android:layout_width="323dp"
        android:layout_height="413dp"
        android:background="@drawable/rounded_background_white"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:id="@+id/tv_adopt_eco_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="@string/habit_intro"
            android:textAlignment="center"
            android:textColor="@color/teal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/habitsuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingTop="20dp"
            android:text="@string/habit_suggestion"
            android:textAlignment="viewStart"
            android:textColor="@color/teal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/habitsuggestionhigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingTop="15dp"
            android:text="@string/habit_suggestion_high"
            android:textAlignment="viewStart"
            android:textColor="@color/teal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/habitsuggestionmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingTop="15dp"
            android:text="@string/habit_suggestion_med"
            android:textAlignment="viewStart"
            android:textColor="@color/teal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/habitsuggestionlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingTop="15dp"
            android:text="@string/habit_suggestion_low"
            android:textAlignment="viewStart"
            android:textColor="@color/teal"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_eco_habit"
        android:layout_width="348dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner_background"
        android:fontFamily="@font/inter_bold"
        android:text="@string/habit_btn"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_info" />
</androidx.constraintlayout.widget.ConstraintLayout>

