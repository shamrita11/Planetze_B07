<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".AdoptedHabitsActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_gravity="end"
        android:alpha="0.1"
        android:background="@drawable/planetze_logo" />

    <TextView
        android:id="@+id/textYourHabits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Your Habits"
        android:textColor="@color/dark_teal"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/daysCompletedHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="Days Completed"
        android:textSize="18sp"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adoptedHabitsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


</LinearLayout>
