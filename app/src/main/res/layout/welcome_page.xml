<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#D8DBE2"
    tools:context=".WelcomeActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/planetze_logo"
        android:layout_width="309dp"
        android:layout_height="103dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/planetze_logo"
        android:src="@drawable/img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Introductory Text -->
    <TextView
        android:id="@+id/intro_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ready_to_begin"
        android:textColor="#1A1A1A"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/planetze_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/intro_subtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:text="@string/let_s_find_out_your_current_carbon_footprint_based_on_your_daily_habits_n_ndon_t_worry_you_only_need_to_do_this_once"
        android:textColor="#1A1A1A"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/intro_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#009999"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/get_started"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/intro_subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- res/layout/bottom_navigation.xml -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009999"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Buttons with icons in the footer -->
        <ImageButton
            android:id="@+id/trackerButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Tracker Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_tracker" />

        <ImageButton
            android:id="@+id/gaugeButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Eco Gauge Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_gauge" />

        <ImageButton
            android:id="@+id/hubButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Eco Hub Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_hub" />

        <ImageButton
            android:id="@+id/balanceButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Eco Balance Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_balance" />

        <ImageButton
            android:id="@+id/agentButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Eco Agent Icon"
            android:scaleType="centerInside"
            android:src="@drawable/img_1" />

        <ImageButton
            android:id="@+id/userButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="User Icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_user" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
