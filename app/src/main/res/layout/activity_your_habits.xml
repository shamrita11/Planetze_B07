<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <!-- Logo at the top -->
        <TextView
            android:id="@+id/app_name2"
            android:layout_width="140dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:alpha="0.1"
            android:background="@drawable/planetze_logo" />

        <!-- Title at the Top -->
        <TextView
            android:id="@+id/title_your_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="@string/your_habits"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/dark_teal"
            android:fontFamily="sans-serif" />

        <!-- Days Completed Subtitle -->
        <TextView
            android:id="@+id/days_completed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_your_habits"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="24dp"
            android:text="@string/days_completed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_teal"
            android:background="@drawable/rounded_text"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

        <!-- Habit Entry -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/days_completed_title">

            <!-- Habit Text -->
            <TextView
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_text"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="@string/trp_habit1"
                android:textColor="@color/dark_teal"
                android:textSize="18sp" />

            <!-- Days Completed Input -->
            <EditText
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/input_borders"
                android:gravity="center"
                android:hint="@string/zero"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="@color/dark_teal" />
        </LinearLayout>

        <!-- Food Image -->
        <TextView
            android:id="@+id/food_img"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="29dp"
            android:alpha="0.1"
            android:background="@drawable/habits" />

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="50dp"
            android:focusable="true"
            android:scaleType="fitXY"
            android:clickable="true"
            android:src="@drawable/food_back"
            android:background="@null"
            android:contentDescription="@string/back_btn" />

    </RelativeLayout>

    <!-- Add other views like FloatingActionButton, Snackbar, etc., if needed -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>
