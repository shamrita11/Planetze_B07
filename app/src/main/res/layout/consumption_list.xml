<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/app_name2"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:alpha="0.1"
        android:background="@drawable/planetze_logo" />

    <FrameLayout
        android:id="@+id/white_box_container"
        android:layout_width="350dp"
        android:layout_height="550dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/consumption_habits"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="@string/consumption_habits"
            android:textColor="@color/dark_green"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/con_habit1"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_text"
            android:padding="20dp"
            android:text="@string/con_habit1"
            android:textColor="@color/dark_green"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/con_habit2"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:padding="20dp"
            android:layout_marginTop="170dp"
            android:text="@string/con_habit2"
            android:textColor="@color/dark_green"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/con_habit3"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:padding="20dp"
            android:layout_marginTop="260dp"
            android:text="@string/con_habit3"
            android:textColor="@color/dark_green"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/con_habit4"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:padding="20dp"
            android:layout_marginTop="360dp"
            android:text="@string/con_habit4"
            android:textColor="@color/dark_green"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/con_habit5"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:padding="20dp"
            android:layout_marginTop="440dp"
            android:text="@string/con_habit5"
            android:textColor="@color/dark_green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/adopt_habit_btn_con1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginTop="76dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/trp_adopt_habit_btn"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/con_adopt_habit" />

        <ImageButton
            android:id="@+id/adopt_habit_btn_con2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginTop="163dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/trp_adopt_habit_btn"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/con_adopt_habit" />

        <ImageButton
            android:id="@+id/adopt_habit_btn_con3"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginTop="246dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/trp_adopt_habit_btn"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/con_adopt_habit" />

        <ImageButton
            android:id="@+id/adopt_habit_btn_con4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginTop="329dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/trp_adopt_habit_btn"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/con_adopt_habit" />

        <ImageButton
            android:id="@+id/adopt_habit_btn_con5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:layout_marginTop="412dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/trp_adopt_habit_btn"
            android:focusable="true"
            android:scaleType="fitXY"
            android:src="@drawable/con_adopt_habit" />

    </FrameLayout>

    <TextView
        android:id="@+id/con_img"
        android:layout_width="257dp"
        android:layout_height="246dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="0dp"
        android:alpha="0.2"
        android:background="@drawable/cons" />

    <ImageButton
        android:id="@+id/con_back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/back_btn"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/cons_back" />

</RelativeLayout>