<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="600dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@color/white">

            <!-- Title -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_round_border"
                android:elevation="4dp"
                android:padding="20dp"
                app:cardCornerRadius="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/card_round_border"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/titleLogTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Consumption"
                        android:textColor="@color/green"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Spinner for Consumption Activity -->
            <TextView
                android:id="@+id/labelConsumeActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Select an Activity"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinnerConsumeActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_border" />

            <!-- Number of Clothing Purchases -->
            <TextView
                android:id="@+id/labelNumCloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Number of Clothing Purchased"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editTextNumCloth"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="e.g. 2"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bottom_border" />

            <!-- Device Type -->
            <TextView
                android:id="@+id/labelDeviceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Select the Type of Electronic Device"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinnerDeviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_border" />

            <!-- Number of Device Purchases -->
            <TextView
                android:id="@+id/labelNumDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Number of Devices Purchased"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editTextNumDevice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="e.g. 2"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bottom_border" />

            <!-- Other Type -->
            <TextView
                android:id="@+id/labelPurchaseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Select the Type of Purchase"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinnerPurchaseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_border" />

            <!-- Number of Other Purchases -->
            <TextView
                android:id="@+id/labelNumPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Number of the Purchases"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editTextNumPurchase"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="e.g. 2"
                android:importantForAutofill="no"
                android:inputType="number"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bottom_border" />

            <!-- Spinner for Bill Type -->
            <TextView
                android:id="@+id/labelBillType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Select the Type of Bill"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinnerBillType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/spinner_border" />

            <!-- Bill Amount -->
            <TextView
                android:id="@+id/labelBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Bill Amount ($)"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editTextBill"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:hint="e.g. 150"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bottom_border" />

            <!-- Add Button -->
            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:backgroundTint="@color/green"
                android:minHeight="48dp"
                android:padding="12dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Include the back button -->
    <include
        layout="@layout/back_btn"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
</LinearLayout>