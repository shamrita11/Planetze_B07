<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for calendar dates -->
    <style name="CalendarDayTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/teal</item>
        <item name="android:colorFocusedHighlight">@color/teal</item>
        <item name="android:focusedMonthDateColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CalendarWeekDayTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/teal</item>
        <item name="android:colorFocusedHighlight">@color/teal</item>
        <item name="android:focusedMonthDateColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>